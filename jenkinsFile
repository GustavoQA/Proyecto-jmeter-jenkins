pipeline {
    agent any
    stages {
        stage('Clonar Repositorio') {
            steps {
                checkout scm
            }
        }
        stage('Ejecutar Pruebas JMeter') {
            steps {
                bat 'jmeter -n -t Token.jmx -l results.jtl'
            }
        }
        stage('Generar Reporte JMeter') {
            steps {
                bat 'jmeter -g results.jtl -o report'
            }
        }
    }
}